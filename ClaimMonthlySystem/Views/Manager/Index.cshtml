@model List<Claim>
@{
    ViewData["Title"] = "Pending Claims";
}

<h2>Pending Claims for Approval</h2>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Claim ID</th>
                    <th>Lecturer</th>
                    <th>Submission Date</th>
                    <th>Hours</th>
                    <th>Rate (R)</th>
                    <th>Total (R)</th>
                    <th>Notes</th>
                    <th>Documents</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.Id</td>
                        <td>@claim.LecturerName</td>
                        <td>@claim.SubmissionDate.ToString("dd/MM/yyyy")</td>
                        <td>@claim.HoursWorked</td>
                        <td>@claim.HourlyRate.ToString("N2")</td>
                        <td><strong>@claim.TotalAmount.ToString("N2")</strong></td>
                        <td>
                            @if (!string.IsNullOrEmpty(claim.AdditionalNotes))
                            {
                                <button class="btn btn-sm btn-outline-info"
                                        data-bs-toggle="popover"
                                        title="Additional Notes"
                                        data-bs-content="@claim.AdditionalNotes">
                                    View Notes
                                </button>
                            }
                            else
                            {
                                <span class="text-muted">No notes</span>
                            }
                        </td>
                        <td>
                            @if (claim.Documents.Any())
                            {
                                foreach (var doc in claim.Documents)
                                {
                                    <a href="@Url.Action("ViewDocument", new { claimId = claim.Id, documentId = doc.Id })"
                                       class="btn btn-sm btn-outline-primary mb-1" target="_blank">
                                        @doc.FileName
                                    </a>
                                }
                            }
                            else
                            {
                                <span class="text-muted">No documents</span>
                            }
                        </td>
                        <td>
                            <form method="post" class="d-inline">
                                <button type="submit" formaction="@Url.Action("ApproveClaim", new { id = claim.Id })"
                                        class="btn btn-sm btn-success">
                                    Approve
                                </button>
                            </form>
                            <form method="post" class="d-inline">
                                <button type="submit" formaction="@Url.Action("RejectClaim", new { id = claim.Id })"
                                        class="btn btn-sm btn-danger">
                                    Reject
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info text-center">
        <div class="py-4">
            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
            <h4>No Pending Claims</h4>
            <p class="mb-0">There are no claims waiting for approval at the moment.</p>
            <p class="text-muted">Claims will appear here when lecturers submit them.</p>
        </div>
    </div>
}

@section Scripts {
    <script>
        // Initialize Bootstrap popovers
        $(function () {
            $('[data-bs-toggle="popover"]').popover({
                trigger: 'focus'
            });
        });
    </script>
}

